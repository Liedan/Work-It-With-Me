        android:text="Calculus"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="US History"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
